{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window with full file access",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "core:window:allow-toggle-maximize",
    "process:default",
    "os:allow-os-type",
    "core:window:allow-set-fullscreen",
    "shell:default",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-create",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-truncate",
    "fs:allow-read",
    "fs:allow-write",
    "fs:scope-home-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "/storage/**" },
        { "path": "/sdcard/**" },
        { "path": "/data/**" },
        { "path": "/cache/**" }
      ]
    }
  ]
}
